<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shellever.sqlite.MainActivity">

    <Button
        android:onClick="testAddClick"
        android:text="testAdd"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_test_add" />

    <Button
        android:layout_marginTop="10dp"
        android:onClick="testFindAllClick"
        android:text="testFindAll"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_text_findall" />

    <Button
        android:layout_marginTop="10dp"
        android:onClick="testFindByNameClick"
        android:text="testFindByName"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_text_find" />

    <Button
        android:layout_marginTop="10dp"
        android:onClick="testUpdateByNameClick"
        android:text="testUpdateByName"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_text_update" />

    <Button
        android:layout_marginTop="10dp"
        android:onClick="testDeleteByNameClick"
        android:text="testDeleteByName"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_text_delete" />

    <Button
        android:layout_marginTop="10dp"
        android:onClick="testGetCountClick"
        android:text="testGetCount"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_text_count" />

</LinearLayout>
